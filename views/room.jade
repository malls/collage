extends layout

block content
  script(src='/javascripts/fun.js')
  body(style="background: " + background)
    #zone(dropzone="copy f:image/png f:image/gif f:image/jpeg f:image/ico f:image/bmp")
      if data 
        each item in data
          img(id=item.id style=item.position src=item.url)
    #navbar
      ul
        li.baritem upload an image:
        li.baritem
          input#upload(type="file")
        li.baritem
          #imgzone add img from url:
            input#imgInput(type="text" name="url" placeholder="paste a url" autocomplete="off")
            button#imgbutton submit 
        li.baritem change the background:
        li.baritem
          #bgzone
            input#bgInput(type="text" name="url" placeholder="paste a url" autocomplete="off")
            button#bgbutton submit 
        li.baritem
          a(href="https://twitter.com/share" class="twitter-share-button" data-text="i been had collages. check out my garden at" data-related="forrestalmasi") Tweet
          script
            !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');